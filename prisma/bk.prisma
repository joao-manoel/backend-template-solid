// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  username String
  email    String @unique
  password String

  created_at DateTime   @default(now())
  updated_at DateTime   @default(now()) @updatedAt
  deleted_at DateTime?
  roles      UserRole[]

  @@map("users")
}

model UserRole {
  id     String @id
  user   User   @relation(fields: [userId], references: [id])
  userId String
  role   Role   @relation(fields: [roleId], references: [id])
  roleId String

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  @@map("users_roles")
}

model Role {
  id              String           @id
  name            String           @unique
  description     String
  Users_roles     UserRole[]
  Permission_role PermissionRole[]

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  @@map("roles")
}

model PermissionRole {
  id           String     @id
  permission   Permission @relation(fields: [permissionId], references: [id])
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id])
  roleId       String

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  @@map("permissions_roles")
}

model Permission {
  id              String           @id
  name            String           @unique
  description     String
  Permission_role PermissionRole[]

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  @@map("permissions")
}
